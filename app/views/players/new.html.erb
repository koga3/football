<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">投稿する</h1>
    
      <div class="form">
        <div class="form-body">
        <%= form_tag("/players/create") do %>
        <% @player.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
        <p>名前</p>
          <input name="name">
          <p>チーム</p>
          <input name="team">
          <input type="submit" value="投稿">
        <% end %>
        </div>
      </div>
    
  </div>
</div>